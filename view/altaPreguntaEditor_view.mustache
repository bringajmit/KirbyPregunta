{{>headerLogin}}
<main class="h-[100vh] flex items-center justify-center p-4">

        <div class="relative w-full rounded-2xl p-6 bg-[#1C1919] bg-opacity-80  lg:w-[1137px] h-auto flex justify-center items-center flex-col">
            <img class="absolute -top-8 right-0 md:-right-18 lg:top-0 lg:-right-16 w-[90px] h-[90px] md:w-[130px] md:h-[130px]"
                 src="/public/img/kirbyRegistro.png">

            <form class="text-white font-light h-full md:max-w-[600px] lg:max-w-[890px] tracking-[0.06em] text-[15px] flex items-center justify-center"
                  action="/editor/crearPregunta" method="POST" enctype="multipart/form-data">
                <div class="flex flex-col gap-6  items-center justify-center">
                    <h2 class="mt-2 tracking-[0.12em] text-white font-semibold text-[15px] md:text-[20px] uppercase">
                        ALTA DE PREGUNTA</h2>
                    <input class="w-full h-[32.88px] md:w-full lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80"
                           type="text" name="descripcion" id="nombre"
                           placeholder="Descripcion" required>
                    <div class="flex flex-wrap gap-6 items-center justify-center">
                        <input class="w-full h-[32.88px] lg:w-[430px] lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80"
                               type="text" name="opcion_uno" id="opcion_uno"
                               placeholder="Opcion 1" required>

                        <input class="w-full h-[32.88px] lg:w-[430px] lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80"
                               type="text" name="opcion_dos" id="opcion_dos"
                               placeholder="Opcion 2" required>

                        <input class="w-full h-[32.88px] lg:w-[430px] lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80"
                               type="text" name="opcion_tres" id="opcion_tres"
                               placeholder="Opcion 3" required>

                        <input class="w-full h-[32.88px] lg:w-[430px] lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80"
                               type="text" name="opcion_cuatro" id="opcion_cuatro"
                               placeholder="Opcion 4" required>

                        <div class="flex flex-col md:flex-row w-full justify-between gap-2">
                            <select  class="flex flex-1 h-[32.88px] lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80 bg-" name="categoria" required>
                                <option value="" disabled selected hidden>Categoria</option>
                                {{#categorias}}
                                    <option value="{{id}}">{{descripcion}}</option>
                                {{/categorias}}
                            </select>

                            <select  class="flex flex-1 h-[32.88px] lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80 bg-" name="dificultad" required>
                                <option value="" disabled selected hidden>Dificultad</option>
                                {{#dificultad}}
                                    <option value="{{id}}">{{descripcion}}</option>
                                {{/dificultad}}
                            </select>

                            <select  class="flex flex-1 h-[32.88px] lg:h-[47px] rounded-xl p-2 outline-0 bg-[#252121] bg-opacity-80 bg-" name="opcionCorrecta" required>
                                <option value="" disabled  hidden>Opcion correcta</option>
                                <option value="1">Opci贸n 1</option>
                                <option value="2">Opci贸n 2</option>
                                <option value="3">Opci贸n 3</option>
                                <option value="4">Opci贸n 4</option>
                            </select>
                        </div>
                    </div>
                    <div class="my-2 lg:my-6 flex justify-center items-end">
                        <button class="w-[159px] h-[40px] rounded-2xl bg-[#252121] bg-opacity-80 font-normal text-[12px] lg:text-[16px] uppercase"
                                type="submit" name="crearPregunta">Dar alta
                        </button>
                    </div>

                </div>


            </form>
        </div>



</main>
{{> footer}}