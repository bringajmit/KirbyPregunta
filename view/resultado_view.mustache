{{>header}}
<main class="h-[100vh] flex items-center justify-center">
    <div class="relative bg-[#1C1919] bg-opacity-80 rounded-2xl md:w-[982px] w-[382px] flex justify-center items-center flex-col gap-y-14 m-4 py-12 px-4 ">
        <div class="bg-[#1C1919] bg-opacity-80 rounded-2xl lg:w-[782px] p-6 w-auto flex justify-center items-center">
            <p class="text-white text-[15px] md:text-3xl text-center"><strong>Ganador</strong>: {{ganador}}</p>
        </div>
        {{#puntajes}}
        <div class="bg-[#1C1919] bg-opacity-80 rounded-2xl lg:w-[782px] p-6 w-auto flex justify-around items-center">
            <div class="lg:w-[342px]">
                <p class="text-white text-[15px] m-5 md:text-3xl text-center"><strong>Username</strong>: {{usernameRetador}}</p>
                <p class="text-white text-[15px] m-5 md:text-3xl text-center"><strong>Puntaje</strong>: {{puntajeRetador}}</p>
            </div>
            <div class=" lg:w-[342px]">
                <p class="text-white text-[15px] m-5 md:text-3xl text-center"><strong>Username</strong>: {{usernameRival}}</p>
                <p class="text-white text-[15px] m-5 md:text-3xl text-center"><strong>Puntaje</strong>: {{puntajeRival}}</p>
            </div>
        </div>
        {{/puntajes}}

        <div class="bg-[#1C1919] bg-opacity-80 py-2 md:py-4 px-4 rounded-2xl flex justify-center items-center">
            <a href="/user/lobby">
                <img class="max-w-[100%]" src="/public/img/home.png">
            </a>
        </div>
    </div>
</main>

{{>footer}}